# ML Agent System Configuration
# Copy this to .env.agent and fill in your values

# ============================================================================
# ANTHROPIC API (Required for Claude API)
# Get from: https://console.anthropic.com/account/keys
# ============================================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here

# API Model to use (default: latest Claude)
# Options: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# GOOGLE CLOUD PLATFORM (Required for BigQuery)
# Get credentials: https://console.cloud.google.com/
# ============================================================================
GCP_PROJECT_ID=your-project-id

# Path to service account JSON file
# Generate at: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# BigQuery dataset name (where your data lives)
BIGQUERY_DATASET=mlb_historical_data

# ============================================================================
# LOCAL LLM (Optional: for cost optimization)
# Download Ollama from: https://ollama.ai
# ============================================================================

# Use local LLM for routine tasks (true/false)
USE_LOCAL_LLM=false

# Which local model to use
# Faster: mistral:7b (recommended)
# More capable: llama2:13b
LOCAL_LLM_MODEL=mistral:7b

# Local LLM endpoint (Ollama default)
LOCAL_LLM_BASE_URL=http://localhost:11434

# Timeout for local LLM calls (seconds)
LOCAL_LLM_TIMEOUT_SEC=120

# ============================================================================
# AGENT BEHAVIOR
# ============================================================================

# Directory for logs and decision tracking
AGENT_LOG_DIRECTORY=agent/logs

# Primary model version (v1, v2, or v3)
PRIMARY_MODEL_VERSION=v3

# Alert if accuracy drops below this (0.546 = 54.6%)
RETRAIN_THRESHOLD_ACCURACY=0.546

# Maximum iterations for agent reasoning loop
AGENT_MAX_ITERATIONS=10

# Timeout for user confirmation requests (seconds)
AGENT_CONFIRMATION_TIMEOUT_SEC=300

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Training data year range
TRAINING_YEARS_START=2015
TRAINING_YEARS_END=2024

# Validation data year
VALIDATION_YEAR=2025

# Minimum training samples required
MIN_TRAINING_SAMPLES=1000

# ============================================================================
# DATA QUALITY
# ============================================================================

# Alert if training data is older than this (days)
DATA_FRESHNESS_THRESHOLD_DAYS=1

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable data quality alerts
ENABLE_DATA_QUALITY_ALERTS=true

# Enable model drift detection
ENABLE_MODEL_DRIFT_ALERTS=true

# ============================================================================
# ADVANCED (Leave as default unless you know what you're doing)
# ============================================================================

# Confidence thresholds
CONFIDENCE_HIGH_PERCENTILE=0.90
CONFIDENCE_HIGH_ACCURACY=0.565
CONFIDENCE_MEDIUM_PERCENTILE=0.50
CONFIDENCE_MEDIUM_ACCURACY=0.563

# Agent features
V1_FEATURE_COUNT=5
V2_FEATURE_COUNT=44
V3_FEATURE_COUNT=57

# Baseball domain constants
TEAM_COUNT=30
GAMES_PER_SEASON=162
MIN_PITCHER_REST_DAYS=3
PITCHER_FATIGUE_THRESHOLD_PITCH_COUNT=100

# Monitoring check interval (minutes)
MONITOR_CHECK_INTERVAL_MIN=60

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================
#
# 1. Get ANTHROPIC_API_KEY:
#    - Go to https://console.anthropic.com/account/keys
#    - Create new API key
#    - Copy to ANTHROPIC_API_KEY above
#
# 2. Get GCP credentials:
#    - Go to https://console.cloud.google.com/
#    - Create new project or select existing
#    - Create service account
#    - Download JSON key file
#    - Set GOOGLE_APPLICATION_CREDENTIALS to path to JSON
#    - Set GCP_PROJECT_ID to your project
#
# 3. Optional: Setup local LLM
#    - Download Ollama from https://ollama.ai
#    - Run: ollama pull mistral:7b
#    - Set USE_LOCAL_LLM=true
#    - Start Ollama: ollama serve
#
# 4. Verify setup:
#    - python agent/main.py --command status
#    - Should show all configuration values
#
# ============================================================================
